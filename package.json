{
  "name": "ntt-precompile-test",
  "version": "1.0.0",
  "description": "Integration tests for EIP-7885 NTT precompiles using Viem",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:tx": "vitest run ntt-transaction",
    "test:tx-only": "vitest run ntt-transaction --reporter=verbose",
    "type-check": "tsc --noEmit",
    "compile": "npx hardhat build"
  },
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.2",
    "viem": "^2.21.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-viem": "^3.0.1",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^2.0.0",
    "hardhat": "^3.1.0",
    "hardhat-gas-reporter": "^2.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}